<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Multiple posts page page</title>
    <style>
      .blogs {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .blog-card {
        background-color: aliceblue;
        box-shadow: 0px 0px 4px aliceblue;
        border-radius: 10px;
        padding: 12px;
        max-width: 350px;
        min-width: 280px;
      }
    </style>
  </head>
  <body>
    <h1>Our blogs</h1>

    <section class="blogs">
      <% locals.blogs.reverse().forEach(item=>{ %>

      <div class="blog-card">
        <h2><%= item.title %></h2>
        <p><%= item.content %></p>

        <% let date = new Date(item.created_at); %>
        <p><%= formatCustomDate(date) %></p>
      </div>

      <% }) %>
    </section>
  </body>
</html>
